{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "types": [
      "jest",
      "node"
    ],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2018", "dom"],
    "module": "commonjs",
    "target": "es2018"
  },
 "files": [
  "./setup.jest.ts",
  "src/polyfills.ts"
],
  "include": [
    "src/**/*.spec.ts",
    "src/**/*.d.ts"
  ]
}
